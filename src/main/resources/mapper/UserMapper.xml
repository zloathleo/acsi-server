<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.safefire.acsiserver.dao.mapinterface.UserMapper" >
    <resultMap id="BaseResultMap" type="com.safefire.acsiserver.dao.entity.UserEntity" >
        <id column="ID" property="id" jdbcType="INTEGER" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="user_password" property="userPassword" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, user_name, user_password
    </sql>

    <select id="getCount"  resultType="Integer" >
        SELECT COUNT(1) FROM t_user
    </select>

    <select id="findUserById" parameterType="Integer" resultMap="BaseResultMap" >
        SELECT <include refid="Base_Column_List" />
        FROM t_user
        WHERE ID = #{id} limit 1
    </select>

    <select id="findUserByUserName" parameterType="String" resultMap="BaseResultMap" >
        SELECT <include refid="Base_Column_List" />
        FROM t_user
        WHERE USER_NAME = #{userName} limit 1
    </select>

</mapper>
